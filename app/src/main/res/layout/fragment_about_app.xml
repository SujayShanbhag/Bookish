<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutAppFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtAboutApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Bookish"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txtCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by Sujay Shanbhag"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:layout_below="@+id/txtAboutApp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/txtAppDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_desc"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_below="@+id/txtCreator"/>

</RelativeLayout>